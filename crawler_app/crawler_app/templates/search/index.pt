<div metal:use-macro="view.layout">

  <div metal:fill-slot="navigation">
    <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
      <div class="container">
        <a class="navbar-brand text-uppercase text-expanded font-weight-bold d-lg-none" href="#">Caelum WC</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav mx-auto">
            <li class="nav-item px-lg-4">
              <a class="nav-link text-uppercase text-expanded" href="/home">Home
              </a>
            </li>
            <li  class="nav-item active px-lg-4">
              <a class="nav-link text-uppercase text-expanded" href="/search">Crawl!    
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item px-lg-4">
              <a class="nav-link text-uppercase text-expanded" href="/home/logout">Log Out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>  

  <div metal:fill-slot="main_content">

    <section class="page-section clearfix">
      <div class="container">

        <div class="intro-text text-center bg-faded p-5 rounded">
          <h2 class="section-heading mb-4">
            <span class="section-heading-upper">Caelum</span>
            <span class="section-heading-lower">New Search</span>
          </h2>

          <form class="standard-form" method="POST" action="">
            <div class="form-group row">
              <label for="inputUrl" class="col-sm-2 col-form-label text-sm-right">Url</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUrl" placeholder="Url">
              </div>
            </div>
            <fieldset class="form-group">
              <div class="row">
                <legend class="col-form-label col-sm-2 pt-0 text-sm-right">Search Type</legend>
                <div class="col-sm-10 text-left">
                  <div class="form-check">
                    <input class="form-check-input position-relative" type="radio" name="search_type" id="radioSearch1" value="bfs" checked>
                    <label class="form-check-label" for="radioSearch1">
                      Breadth-first search
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input position-relative" type="radio" name="search_type" id="radioSearch2" value="dfs">
                    <label class="form-check-label" for="radioSearch2">
                      Depth-first search
                    </label>
                  </div>
                </div>
              </div>
            </fieldset>
            <div class="form-group row">
              <label for="inputDepth" class="col-sm-2 col-form-label text-sm-right">Depth</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" id="inputDepth" min="1" value="1">
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-xl">Submit</button>
          </form>
        </div>
      </div>
    </section>
  </div>
</div>
